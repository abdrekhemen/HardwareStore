<UserControl x:Class="HardwareStore.Components.ProductPhotoControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HardwareStore.Components"
             mc:Ignorable="d" 
             d:DesignHeight="350" d:DesignWidth="350">
    <Grid>
        <Border Margin="5" BorderBrush="Black" BorderThickness="1">
            <StackPanel>
                <Image Width="300" Height="300" x:Name="ProductPhotoImg" Source="{Binding PhotoByte}"></Image>
                <Button Name="MakeManeBtn" Click="MakeManeBtn_Click">Сделать главным</Button>
                <Button Name="DeletePhotoBtn" Click="DeletePhotoBtn_Click">Удалить</Button>
            </StackPanel>
        </Border>
        
    </Grid>
</UserControl>
